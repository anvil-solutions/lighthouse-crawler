{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true
  },
  "include": [
    "**/*.d.ts",
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "coverage/*",
    "generated/*",
    "out/*"
  ]
}
